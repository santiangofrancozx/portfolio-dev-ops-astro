---
import Header from "../components/Header.astro";
import '@fontsource-variable/onest'
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Santiago portfolio | Web Developer | Back-end Developer | DevOps</title>
	</head>
	<body>
		<div class="fixed inset-0 z-[-2] bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]"></div>
		<Header />
		<slot />
		<Footer/>
	</body>
</html>

<style is:global>
	:root{
		color-scheme: light dark;
	}

	html{
		font-family: 'Onest Variable', sans-serif;
		scroll-behavior: smooth;
		/* background: #13151a; */
	}

	body {
		background: #050505;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	@media (prefer-reduce-motion: reduce) {
			scroll-behavior: auto;
		}
</style>
